#!/bin/bash

# Install HAProxy
sudo apt-get update
sudo apt-get install -y haproxy

# Create the HAProxy configuration files
sudo cat << EOF > /etc/haproxy/haproxy.cfg
global
    log /dev/log    local0
    log /dev/log    local1 notice
    daemon
    maxconn 4096
    user haproxy


defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    default_backend servers

backend servers
    balance roundrobin
    server 64617-web-01 52.201.219.192:80 check
    server 64617-web-02 100.25.143.187:80 check

EOF

# Set the hostnames of the servers
sudo echo "64617-web-01" > /etc/hostname
hostname -F /etc/hostname
sudo echo "52.201.219.192 64617-web-01" >> /etc/hosts
sudo echo "100.25.143.187 64617-web-02" >> /etc/hosts

# Enable the HAproxy init script
sudo update-rc.d haproxy enable

# Start the HAproxy service
sudo service haproxy start

# Verify that HAproxy is running and configured correctly
sudo service haproxy status

# Restart HAproxy to make the changes permanent
sudo service haproxy restart

# Check the HAProxy configuration file to make sure it contains "web-01"
if grep -q "web-01" /etc/haproxy/haproxy.cfg; then
    echo "web-01"
else
    echo "Configuration file does not contain 'web-01'"
fi

